<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/white_bg_corner_20"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="邮箱注册"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/can_reg_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可注册邮箱列表"
            android:textSize="14sp"
            android:textColor="@color/blue_01"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="23dp"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_e2e2e2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:hint="请输入邮箱地址"
            android:textSize="16sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="23dp"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_e2e2e2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:hint="密码长度须在6~18位的字母或数字"
            android:maxLines="1"
            android:maxLength="18"
            android:textSize="16sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/code_card_view"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="23dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/gray_e2e2e2">

            <EditText
                android:id="@+id/edit_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/gray_e2e2e2"
                android:hint="请输入邮箱验证码"
                android:inputType="number"
                android:maxLines="1"
                android:textSize="16sp"/>

            <com.coorchice.library.SuperTextView
                android:id="@+id/get_code_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="获取验证码"
                android:inputType="number"
                android:textColor="@color/blue_01"
                android:gravity="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ivt_card_v"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:cardBackgroundColor="@color/gray_e2e2e2"
        android:layout_marginTop="10dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="23dp">
        <EditText
            android:id="@+id/ivt_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_e2e2e2"
            android:textSize="16sp"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/zc_ts_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="*注册收不到邮件请查看垃圾箱或使用QQ邮箱"
        android:textColor="@color/red"
        android:textSize="14sp" />

  <CheckBox
      android:id="@+id/check_box"
      android:layout_width="wrap_content"
      android:layout_height="30dp"
      android:layout_marginTop="10dp"
      android:text="记住密码"
      android:textColor="@color/black"
      android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.coorchice.library.SuperTextView
            android:id="@+id/cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/white"
            app:stv_solid="@color/red"
            app:stv_corner="23dp"
            android:gravity="center"
            android:textSize="16sp"/>

        <com.coorchice.library.SuperTextView
            android:id="@+id/login_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="登录"
            android:textColor="@color/white"
            app:stv_solid="@color/pay_vip_green"
            app:stv_corner="23dp"
            android:gravity="center"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>