<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/bt"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/torrent_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="11"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/torrent_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray_999"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/collect_im"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/tb_collect_s"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/check_im"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/check_n"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="10dp"
        android:background="@color/gray_e2e2e2"/>

</LinearLayout>