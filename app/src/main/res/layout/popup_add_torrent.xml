<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/white_bg_corner_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加任务链接"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/open_file_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开种子"
            android:textSize="16sp"
            android:textColor="@color/app_color"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="10dp"
            android:background="@color/gray_e2e2e2">

            <EditText
                android:id="@+id/torrent_et"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:textColor="@color/black"
                android:background="@color/gray_e2e2e2"
                android:textSize="14sp"
                android:gravity="top"
                android:hint="支持Magnet、ed2k、https、http、thunder、ftp链接下载"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="10dp">

                <com.coorchice.library.SuperTextView
                    android:id="@+id/show_copy_tv"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/gray_999"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:stv_corner="5dp"
                    app:stv_solid="@color/white"/>

                <ImageView
                    android:id="@+id/clear_im"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/clear_btn"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="* 严禁添加违反国家规定或有害的链接"
        android:textSize="14sp"
        android:textColor="@color/red"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">



        <com.coorchice.library.SuperTextView
            android:id="@+id/paste_tv"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:text="粘贴"
            android:textSize="14sp"
            android:gravity="center"
            app:stv_corner="6dp"
            app:stv_solid="@color/gray_e2e2e2"/>

        <com.coorchice.library.SuperTextView
            android:id="@+id/parse_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="在线解析"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            app:stv_corner="6dp"
            app:stv_solid="@color/app_color"/>


    </LinearLayout>


</LinearLayout>