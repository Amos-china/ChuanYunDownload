<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/back_im"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/blak_back"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="文件详情"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/select_all_tv"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="全不选"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <RadioGroup
        android:id="@+id/rg_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/all_rb"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:text="全部"
            android:textColor="@color/black"/>
        <RadioButton
            android:id="@+id/video_rb"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="视频"
            android:checked="true"
            android:textColor="@color/black"/>
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/torrent_detail_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/file_num_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/select_num_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/file_size_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/ms_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="积分"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/red"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <com.coorchice.library.SuperTextView
                android:id="@+id/download_tv"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:text="立即下载"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/white"
                app:stv_corner="6dp"
                app:stv_solid="@color/app_color"/>

            <com.coorchice.library.SuperTextView
                android:id="@+id/collect_tv"
                android:layout_width="100dp"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                app:stv_corner="6dp"
                app:stv_solid="@color/gray_e2e2e2"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="收藏"/>
        </LinearLayout>



    </LinearLayout>


</LinearLayout>